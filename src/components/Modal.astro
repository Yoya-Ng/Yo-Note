---
// 不需要在這裡定義 isOpen，因為它會由 JavaScript 控制
---

<!-- 按鈕觸發 Modal -->
<button id="openModalBtn" class="px-4 py-2 bg-blue-600 text-white rounded-lg"> 打開彈跳視窗 </button>

<!-- Modal -->
<div id="modal" class="fixed inset-0 bg-gray-500 bg-opacity-50 flex justify-center items-center z-50 hidden">
  <div class="bg-white p-6 rounded-lg shadow-lg w-96">
    <h2 class="text-2xl font-bold mb-4">這是彈跳視窗</h2>
    <p class="mb-4">這是彈跳視窗的內容。</p>
    <button id="closeModalBtn" class="px-4 py-2 bg-red-600 text-white rounded-lg"> 關閉 </button>
  </div>
</div>

<script type="module">
  const openModalBtn = document.getElementById("openModalBtn");
  const closeModalBtn = document.getElementById("closeModalBtn");
  const modal = document.getElementById("modal");

  // 顯示 Modal
  openModalBtn.addEventListener("click", () => {
    modal.classList.remove("hidden");
  });

  // 隱藏 Modal
  closeModalBtn.addEventListener("click", () => {
    modal.classList.add("hidden");
  });
</script>
