
// ============================================
// 6. src/pages/collections.astro
// 我的收藏頁面 (需要 premium 或 admin)
// ============================================

---
import BaseLayout from "@components/base/BaseLayout.astro";
import ProtectedRoute from "@components/ProtectedRoute.vue";
---

<BaseLayout title="我的收藏" description="保存和管理您喜歡的內容">
  <ProtectedRoute requiredRole={['premium', 'admin']} client:load>
    <section class="section container">
      <h1 class="text-3xl font-bold mb-8">⭐ 我的收藏</h1>
      
      <div class="glass rounded-lg p-8">
        <div class="text-center mb-8">
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            您還沒有添加任何收藏
          </p>
          <button class="btn btn-primary">開始收藏內容</button>
        </div>
      </div>

      <!-- 收藏列表示例 -->
      <div class="mt-8 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="glass rounded-lg p-6">
          <h3 class="font-bold mb-2">示例收藏 1</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            這是您收藏的內容
          </p>
          <button class="mt-4 text-blue-500 hover:text-blue-600">查看詳情</button>
        </div>
      </div>
    </section>
  </ProtectedRoute>
</BaseLayout>

<style scoped>
.btn {
  @apply px-4 py-2 rounded-lg font-semibold;
}

.btn-primary {
  @apply bg-blue-500 text-white hover:bg-blue-600;
}
</style>
