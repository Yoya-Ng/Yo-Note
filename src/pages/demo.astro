<script>
  setInterval(() => {
    const text = document.getElementById("changing-text");
    if (text) {
      text.style.color = text.style.color === "black" ? "white" : "black";
      text.style.transition = "color 1s ease-in-out";
    }
  }, 1000);
</script>

<div class="flex h-screen items-center justify-center bg-gray-800">
  <h1 id="changing-text" class="text-4xl font-bold">Color Changing Text</h1>
</div>
